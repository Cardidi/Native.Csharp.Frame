<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:model="clr-namespace:UI.Model"
        mc:Ignorable="d"
        DataContext="{x:Static model:ViewModel.MainInstance}"
        d:DataContext="{x:Static model:DesignViewModel.MainInstance}"
        Title="{Binding Title}" Height="300" Width="600">
    <Grid>
        <TextBlock FontSize="30" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="Demo" TextAlignment="Center"> </TextBlock>
    </Grid>
</Window>
